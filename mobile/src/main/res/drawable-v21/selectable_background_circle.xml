<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="#5FFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <selector android:exitFadeDuration="@android:integer/config_mediumAnimTime">
        <item android:state_pressed="false" android:state_focused="true" android:drawable="@drawable/selectable_focused_circle" />
        <item android:state_pressed="false" android:state_hovered="true" android:drawable="@drawable/selectable_focused_circle" />
        <item android:state_pressed="true" android:drawable="@drawable/selectable_pressed_circle" />
        <item android:drawable="@android:color/transparent" />
    </selector>
</ripple>